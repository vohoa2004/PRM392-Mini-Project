<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của thanh tiến trình (track background) - trong suốt -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Trong suốt -->
            <corners android:radius="2dp" />
            <size android:height="3dp" />
        </shape>
    </item>
    
    <!-- Phần đã hoàn thành (progress) - đường kẻ -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50" /> <!-- Màu xanh lá -->
                <corners android:radius="2dp" />
                <size android:height="3dp" />
                <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="5dp" android:dashGap="3dp" /> <!-- Đường kẻ đứt -->
            </shape>
        </clip>
    </item>
</layer-list> 