<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0E0E0">

    <!-- Title at top -->
    <TextView
        android:id="@+id/tv_round2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Vòng 2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#3F51B5"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left side with win amount and question -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_win_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thắng: +100 điểm"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bạn muốn làm gì tiếp theo?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Right side with points and buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_current_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Số điểm hiện tại: 1000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dừng lại"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#F44336" />

                <Button
                    android:id="@+id/btn_bet_5x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cược x5"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout> 